<?xml version="1.0" encoding="UTF-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.enmasse</groupId>
    <artifactId>iot-application-base</artifactId>
    <version>0.32-SNAPSHOT</version>
    <relativePath>../iot-application-base</relativePath>
  </parent>

  <artifactId>iot-device-registry-file</artifactId>
  <!-- used in the banner -->
  <name>EnMasse IoT Device Registry (non-production, File)</name>

  <dependencies>
    <dependency>
      <groupId>org.eclipse.hono</groupId>
      <artifactId>hono-service-device-registry</artifactId>
    </dependency>

    <!-- tracing -->
    <dependency>
      <groupId>io.jaegertracing</groupId>
      <artifactId>jaeger-client</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <mainClass>org.eclipse.hono.deviceregistry.Application</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
